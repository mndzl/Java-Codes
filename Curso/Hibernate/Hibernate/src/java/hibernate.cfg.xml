<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/111mil?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <mapping resource="model/pojo/Localidades.hbm.xml"/>
    <mapping resource="model/pojo/Departamentos.hbm.xml"/>
    <mapping resource="model/pojo/GradosTrabajo.hbm.xml"/>
    <mapping resource="model/pojo/Empleados.hbm.xml"/>
    <mapping resource="model/dao/Localidades.hbm.xml"/>
    <mapping resource="model/dao/Departamentos.hbm.xml"/>
    <mapping resource="model/dao/GradosTrabajo.hbm.xml"/>
    <mapping resource="model/dao/Empleados.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
